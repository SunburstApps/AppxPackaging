    <PackageTags>uwp;centennial;appx;desktop-bridge</PackageTags>
    <Version>1.0.0</Version>

    <PackageProjectUrl>https://github.com/SunburstApps/AppxPackaging</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/SunburstApps/AppxPackaging/blob/master/LICENSE.txt</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Sunburst.AppxPackaging.UwpApiReferences" Version="1.0.0" />
  </ItemGroup>
</Project>
